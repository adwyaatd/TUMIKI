<div class = "main">
  <%= render 'layouts/menu' %>

  <div class = "container">
    <h1 class="form-heading">達成済み目標一覧</h1>
    <% @user.goals.each do |goal|%>
      <% if goal.status == "done" %>
          <div class="form">
            <div class="post-content">
              <p>【達成日時】<%= goal.updated_at %></p>
              <p>【目標】<%= goal.goal %></p>
              <p>【目的】<%= goal.purpose %></p>
              <p>【達成期日】<%= goal.date %></p>
              <p>【設定日時】<%= goal. created_at%></p>
            </div>
            <div class="foot-wrapper">
              <div class="likes_count">
                <%= link_to("未完了へ戻す","/goals/#{goal.id}/unfinish",{method: "post"})%>
              </div>
              <div class="likes_count">
                <%= link_to("削除","/goals/#{goal.id}/destroy",{method: "post"})%>
              </div>
            </div>
          </div>
        <% end %>
    <% end %>
  </div>
</div>