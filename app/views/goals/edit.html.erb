<div class="main">

  <%= render 'layouts/menu' %>

  <div class="container">
    <div class="form-heading">目標更新</div>

   <div class="form">
    <div class="form-body">
        <%= form_with model: @goal do |f| %>
          <%= f.label :goal,"あなたの目標は何ですか？"%>
          <%= f.text_field :goal%>

          <%= f.label :purpose,"その目的は何でしょう？"%>
          <%= f.text_field :purpose%>

          <%= f.label :date,"いつまでに達成しますか？"%>
          <br>
          <%= f.date_field :date %>
          <%#= f.date_select :date,{use_month_numbers:true} %>
          <br>

          <%= f.submit "更新する"%>
        <% end %>        
    </div>
   </div>
  </div>
</div>