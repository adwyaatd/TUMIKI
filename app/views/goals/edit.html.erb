<div class="main">

  <%= render 'layouts/menu' %>

  <div class="container">
    <div class="form-heading">目標更新</div>

   <div class="form">
    <div class="form-body">
        <%= form_with model: @goal,local: true do |f| %>
        <%#= form_tag goal_path,method: :patch do %>
          <!--<P>あなたの目標は何ですか？</P>
            <input name="goal" value="<%= @goal.goal %>">-->
          <%= f.label :goal,"あなたの目標は何ですか？"%>
          <%= f.text_field :goal,value:@goal.goal%>

          <!--<p>その目的は何でしょう？</p>
            <input name="purpose" value="<%= @goal.purpose %>">-->
          <%= f.label :purpose,"その目的は何でしょう？"%>
          <%= f.text_field :purpose,value:@goal.purpose%>

          <!--<P>いつまでに達成しますか？</P>
            <input type="date" name="date" value="<%= @goal.date %>">-->
          <%= f.label :date,"いつまでに達成しますか？"%>
          <br>
          <%= f.date_field :date %>
          <%#= f.date_select :date,{use_month_numbers:true} %>
          <br>

          <!--<input type="submit" value="更新">-->
          <%= f.submit "更新する"%>
        <% end %>        
    </div>
   </div>
  </div>
</div>