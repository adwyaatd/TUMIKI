<div class="main posts-new">
    <%= render 'layouts/menu' %>

    <div class="container">
        <h1 class="form-heading">編集する</h1>
        <div class="form">
            <div class="form-body">
                <% @task.errors.full_messages.each do |messsage| %>
                <div class="form-error">
                    <%= messsage %>
                </div>
                <% end %>
                <%= form_tag("/tasks/#{@task.id}/update") do%>
                    <textarea name="content"><%= @task.content%></textarea>
                    <input type="submit" value="保存">
                <% end %>
            </div>
        </div>
    </div>
</div>