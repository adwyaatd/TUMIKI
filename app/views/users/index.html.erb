<div class="main">
  <%= render 'layouts/menu' %>
  
  <div class="container">
    <h1 class="users-heading">【ユーザー一覧】</h1>
    <% @users.each do |user|%>
      <div class="users-index-item">
        <div class="user-left">
          <% if user.image.attached? %>
            <%= image_tag user.image %>
          <% else %>
            <img src="<%="/user_images/#{user.image_name}"%>">
          <% end %>
        </div>
        <div class="user-right">
          <%= link_to user.name,user_path(user) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
