<div class="main user-show">

  <div  class="menu">
    <ul class="user">
      <li>
      <img src="<%="/user_images/#{@current_user.image_name}"%>">
      <br><%= link_to(@current_user.name,"/users/#{@current_user.id}/edit")%>
      </li>
      <li>
      　<p>振り返り</p>
      </li>
      <li>
        <%= link_to("目標設定","/goals/#{@current_user.id}/edit") %>
      </li>
      <li>
        <%= link_to("ユーザー一覧","/users/index") %>
      </li>
      <li>
        <%= link_to("投稿一覧","/posts/index")%>
      </li>
      <li>
        <%= link_to("新規投稿","/posts/new")%>
      </li>
      <li>
        <%= link_to("ログアウト","/logout",{method:"post"})%>
      </li>
  　</ul>
  </div>

  <div class="user-container">

    <div class="goal-tab ">
      <p>【目標】<%= @goal.goal %></p>
      <p>【目的】<%= @goal.purpose %></p>
      <p>【達成期日】<%= @goal.date %></p>
    </div>

    <%= form_tag("/users/posts_create")do %>
      <div class="post-form">
       <div class="post-form-body">
        <% @post.errors.full_messages.each do |message| %>
         <div class="form-error">
          <%= message %>
         </div>
        <% end %>
         <p>今日の積み上げ</p>   
         <textarea name="content"><%= @post.content %></textarea>
         <input type="submit" value="投稿">
       </div>
      </div>
    <% end %>

    <ul class="user-tabs">
      <li class="active"><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>
    <% @user.posts.each do |post|%>
      <div class="user-posts-box">
        <div class="post-content">
         <%= link_to(post.content,"/posts/#{post.id}") %> 
        </div>
        <div class="foot-wrapper">
          <div class="likes_count">
           <span class= "fa fa-heart btn-to-unlike"></span>
           <%= Like.where(post_id: post.id).count %>
          </div>
          <div class="posting-time">
            <%= post.created_at %>
          </div>
        </div>
      </div>
    <% end %>
  </div>  

</div>
